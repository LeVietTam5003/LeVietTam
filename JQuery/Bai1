<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style type="text/css">
        .demo {
            background-color: red;
        }
    </style>
    <!-- goi thu vien jquery vao -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <script>
        $(document).ready(function() {
            // viet trong document

            // viet ham click vao button thi them class DEMO vao the p
            $("button.add").click(function() {

                // addClass: ham them class vao the html
                $("p").addClass("demo");
                // $("p").hide() //an di
                // $("p").slideUp();
            })

            $("button#remove").click(function() {
                // removeClass: xoa class vao the html
                $("p").removeClass("demo");
                // $("p").show() // hien thi ra
                // $("p").slideDown()

                // hasClass: kiem tra 1 class co trong the html k?
                // - co thi tra ve ket qua TRUE 
                // - K -> FALSE

                // var xx = $("p").hasClass("demo");
                // if (xx == true) {
                //     $("p").removeClass("demo");
                // } else {
                //     $("p").addClass("demo");
                // }

            })
        })
    </script>
</head>

<body>
    <p>hoc jquery</p>
    <button class="add">add</button>

    <button id="remove">remove</button>

</body>

</html>

